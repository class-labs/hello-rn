{
  "name": "hello-rn",
  "version": "0.0.0",
  "main": "src/index.ts",
  "scripts": {
    "start": "expo start",
    "clean": "rm -rf .expo dist tsconfig.tsbuildinfo",
    "typecheck": "tsc --noEmit",
    "unit": "jest",
    "unit:watch": "jest --watchAll",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "test": "npm run typecheck && npm run unit && npm run format:check"
  },
  "dependencies": {
    "@react-navigation/native": "^6.1.18",
    "@react-navigation/native-stack": "^6.11.0",
    "@tamagui/config": "^1.108.4",
    "@tamagui/font-inter": "^1.108.4",
    "@tamagui/lucide-icons": "^1.108.4",
    "expo": "~51.0.28",
    "expo-font": "~12.0.9",
    "expo-status-bar": "~1.12.1",
    "react": "18.2.0",
    "react-native": "0.74.5",
    "react-native-safe-area-context": "4.10.5",
    "react-native-screens": "3.31.1",
    "react-native-svg": "15.2.0",
    "tamagui": "^1.108.4"
  },
  "devDependencies": {
    "@babel/core": "^7.20.0",
    "@ianvs/prettier-plugin-sort-imports": "^4.3.1",
    "@testing-library/react-native": "^12.6.0",
    "@total-typescript/ts-reset": "^0.5.1",
    "@types/jest": "^29.5.12",
    "@types/react": "~18.2.79",
    "jest": "^29.7.0",
    "jest-expo": "^51.0.4",
    "prettier": "^3.3.3",
    "react-native-svg-transformer": "^1.5.0",
    "typescript": "~5.3.3"
  },
  "overrides": {
    "react": "18.2.0"
  },
  "jest": {
    "preset": "jest-expo",
    "transformIgnorePatterns": [
      "node_modules/(?!((jest-)?react-native|@react-native(-community)?)|expo(nent)?|@expo(nent)?/.*|@expo-google-fonts/.*|react-navigation|@react-navigation/.*|@sentry/react-native|native-base|react-native-svg)"
    ]
  },
  "prettier": {
    "overrides": [
      {
        "files": "app.json",
        "options": {
          "parser": "json-stringify"
        }
      }
    ],
    "plugins": [
      "@ianvs/prettier-plugin-sort-imports"
    ],
    "importOrder": [
      "^react$",
      "^react-native$",
      "<THIRD_PARTY_MODULES>",
      "",
      "^[./]"
    ]
  },
  "private": true
}
